#googleBind{
  .content-block {
    width: 535px;
    margin: 0 auto;
    .title {
      font-size: 14px;
      margin: 45px 0 30px;;
    }
    .img {
      position: relative;
      .link_block {
        position: absolute;
        top: 0;
        left: 0;
        width:100%;
        height: 55px;
      }
      .app-link {
        width: 32%;
        display: inline-block;
        height: 55px;
        margin-right: 2px;
      }
    }
    .miyao {
      height:130px;
      position: relative;
      img {
        width:130px;
        height:130px;
        float: left;
      }
      .ewm {
        float: left
        padding-left: 50px;
        p {
            color: $blue-font-color;
            font-size: 20px;
            margin: 52px 0 15px; 
        }
        button {
          width:155px;
          height: 44px;
          line-height: 44px;
          text-align: center;
          font-size: 16px;
        }
      }
    }
    .remarks {
      color: $red-color;
      font-size: 14px;
      line-height: 26px; 
      padding-left: 26px;
      position: relative;
      i.icon {
        color: $sub-background-color;
        background:$red-color;
        font-size: 14px;
        position: absolute;
        width: 16px;
        height: 16px;
        font-weight: bold;
        text-align: center;
        line-height: 18px;
        border-radius: 100px;
        top: 6px;
        left: 0;
      }
    }
    .wgt-inlineInput {
      .inlint-title {
        color: $base-font-color;
        margin-top: 20px;
      }
    }
    .button-inline {
      margin-top:60px;
      margin-bottom: 20px;
      button {
        height: 52px;
        width: 100%;
        font-size: 18px;
      } 
    }
  }
}