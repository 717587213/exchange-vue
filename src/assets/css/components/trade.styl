  /*  K线图 样式 */ 
  .charts-block {
    font-size: 12px;
    height:458px;
    position: relative;
    overflow: hidden;
    .tabs-chart {
      position: absolute;
      right: 0;
      top: 0;
      text-align: right;
      z-index: 99;
      line-height: 30px;
      span {
        display: inline-block;
        margin: 0 5px;
        cursor: pointer;
        &.selected {
          color: $blue-font-color;
        }
      }
    }
    .slide {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      opacity: 0;
      transition: all .5s ease;
      overflow: hidden;
      height: 100%;
      z-index: 2;
      &.selected {
        transform: translateX(0%);
        opacity: 1;
        z-index: 3;
      }
    }
  }
  .order-data-list {
    clear: both;
    padding: 10px;
    min-height: 256px;
    transiton: all 0.2s linear; 
      -webkit-transition: all 0.2s linear; 
    .tab-nav {
      height: 38px;
      line-height: 38px;
      z-index: 2;
      top: -1px;
      // border-bottom: 1px solid $table-border-color;
      li {
        float: left;
        height: 100%;
        text-align: center;
        cursor: pointer;
        font-size: 14px;
        padding: 0 10px;
        margin: 0 10px;
        &.selected {
            color: $blue-font-color;
            border-bottom: 1px solid $blue-font-color;
        }
      }
      .refresh-btn {
        float: right;
      }
    }
    .order-list-box {
      min-height: 150px;
      transiton: all 0.2s linear; 
      -webkit-transition: all 0.2s linear; 
    }
    table {
      tr {
        position: relative;
        border-bottom: 1px solid $table-border-color;
        height: 30px;
        line-height: 30px;
        cursor: pointer;
        overflow: hidden;
         td {
          text-align: center;
         }
         &:hover {
          color: $blue-font-color;
         }
      }
      .cancel_Deal {
        color: $blue-font-color;
        pading-bottom: 2px;
        &:hover {
          border-bottom: 1px solid $blue-font-color;
          
        }
      }
      .status_msg {
        padding-right: 20px;
        text-align: right;
      }
    }
    .sibTable {
      border: 1px solid $blue-font-color;
      position: relative;
      padding: 5px;
      tr {
        border: 0 none;
        td{
          color: $base-font-color;
        }
         &:hover {
          td {
            color: $blue-font-color;
           }
        }
      }
      &:after {
          content: '';
          width: 6px;
          height: 6px;
          display: block;
          position: absolute;
          right: 45px;
          top: -4px;
          border-top: 1px solid $blue-font-color;
          border-left: 1px solid $blue-font-color;
          background: $sub-background-color;
          transform: rotate(45deg);
      }
    }
  }
  #kline-loading {
    position: absolute;
    background: $sub-background-color;
    top: 0px;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9;
    .bar {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate3D(-50%, -50%, 0);
    }
  }
  .echart-box {
    width 99%;
  }
  .no-data {
    text-align: center;
    padding-top: 15px;
  }
  .coverKlineBox {
    position: absolute;
    top: 30px;
    left:0;
    right: 0;
    bottom: 0;
  }
  .flip-list-move {
    transition: transform 0.6s;
  }
  .no_drop {
    cursor: no-drop;
  }  
}
//  页面动画 
.fade-enter-active, .fade-leave-active {
  transition: opacity .8s;
}
.fade-enter, .fade-leave-to {
  opacity: 0;
}































