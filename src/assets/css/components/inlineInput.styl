.wgt-inlineInput {
  &.readOnly {
    cursor: default;
    input ,div{
      cursor: default;
      opacity: 0.5;
    }
    .inlint-title {
      opacity: 1;
    }
  }
  .inlint-title{
    color: $explain-font-color;
    font-size: 12px;
    margin: 20px 0 10px;
    text-align: left;
  }
  .error-info {
    color: $red-color;
    font-size: 12px;
    padding-top: 10px;
    line-height: 12px;
    text-align: left;
  }
  .inline {
    position: relative;
    // 获取验证码
    .get-verifi-btn {
      position: absolute;
      line-height: 18px;
      height: 18px;
      top :12px;
      right: 12px;
      padding-left: 12px;
      border-left: 1px solid $base-font-color;
      color: $base-font-color;
      font-size: 14px;
      cursor: pointer;
      width: 100px;
      text-align: center;
      z-index:11;
    }
    // 填写手机号 and 选择区号
    &.phone-input{
      position: relative;
      input {
        text-indent: 126px;
      }
      .pop-mobile-box {
        input {
          height:34px;
          line-height:34px;
          border-radius: 0;
          text-indent: 10px;
          width:100%;
          font-size: 14px;
        }
        .country-code-list{
          height: 205px;
          overflow-x: hidden;
          overflow-y: auto;
        }
      }
      // 选择区号 下拉列表
      .area-code {
        position: absolute;
        width: 116px;
        top: 1px;
        left: 0;
        border-right: 1px solid $border-blue-color;
        cursor: pointer;
        text-align: center;
        z-index: 12;
        height:40px;
        color:$base-font-color;
        line-height: 42px;
      }
      .icon-down { 
        display: inline-block;
        vertical-align: middle;
        font-size: 14px;
        z-index: 11
      }
    }
    // 下拉列表
    &.select-input {
      input {
        cursor: default;
      }
      .icon-down {
        display: inline-block;
        vertical-align: middle;
        position: absolute;
        top: 16px;
        right: 12px;
        font-size: 14px;
        margin: 0;
        z-index:11;
      }
    }
    .select-option-box {
      position: absolute;
      top: 42px;
      left: 0px;
      width: 100%;
      max-height: 250px;
      overflow-x: hidden;
      overflow-y: auto;
      border: 1px solid $border-blue-color;
      background-color: $input-background;
      z-index:13;
      li {
        padding: 5px 10px;
        text-align: left;
        line-height:24px;
        height: 24px;
        color: $base-font-color;
        &:hover {
          color:$blue-font-color;
          cursor: pointer;
          background-color: $sub-background-color;
        }
        &.current {
          color:$blue-font-color;
          cursor: pointer;
          background-color: $sub-background-color;
        }
      }
    }
  }
  input {
    height: 40px;
    line-height: 40px;
    text-indent: 10px;
    position:relative;
    z-index:10;
  }
  

}
