#comLoading{
    width: 51px;
    height: 15px;
    position:relative;
}
#comLoading span{
    display:block;
    bottom:0px;
    width: 3px;
    height: 3px;
    background: $blue-font-color;
    position:absolute;
    animation: comLoading 1.5s  infinite ease-in-out;
}
#comLoading span:nth-child(2){
    left: 8px;
    animation-delay: .1s;  
}
#comLoading span:nth-child(3){
    left: 16px;
    animation-delay: .2s;
}
#comLoading span:nth-child(4){
    left: 24px;
    animation-delay: .3s;
}
#comLoading span:nth-child(5){
    left: 32px;
    animation-delay: .4s;
}
#comLoading span:nth-child(6){
    left: 40px;
    animation-delay: .5s;
}
#comLoading span:nth-child(7){
    left: 48px;
    animation-delay: .6s;
}
@keyframes comLoading {
    0% {transform: scale(1, 1)}
    25% {transform: scale(1, 10)}
    50% {transform: scale(1, 1.666)}
    100% {transform: scale(1, 1)}
}